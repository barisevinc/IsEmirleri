<div class="row">
    <div class="col-12">

        <div class="card">
            <div class="card-header bg-soft-success text-dark text-center d-flex">

                <div class="col-11 text-center fs-3 text-dark">Durum Listesi</div>
                <div class="col-1 fs-3">
                    <a href="#" id="btnAdd" class="btn btn-success"><i class="uil uil-plus me-2"></i>Yeni Kayıt</a>
                </div>

            </div>
            <div class="card-body">
                <table id="tblStatus" class="table table-bordered table-striped table-hover"></table>
            </div>
        </div>


    </div>
</div>

<div class="modal fade" id="modalAdd" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" role="dialog" aria-labelledby="modalTitleId" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">


                <div class="mb-3 row">
                    <input type="text" class="form-control" id="txtStatusname" placeholder="Durum adı giriniz">

                </div>
                <input type="text" id="txtCustomerId" value="@ViewBag.UserId">




            </div>


            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    Kapat
                </button>
                <button type="button" id="btnSave" class="btn btn-primary">Kaydet</button>
            </div>


        </div>
    </div>
</div>




@section Scripts {
    <script>
        let DataTable = "";
        $(document).ready(function () {
            $("#btnAdd").click(function () {
                $("#modalAdd").modal("show");
                $("#modalAdd .form-control").val('');
                $("#modalTitle").text("Yeni Durum Kaydı");

                $("#btnSave").text("Kaydet").off().click(function () {

                    let data = {
                        missionStatus: {
                            name: $("#txtStatusname").val(),
                            customerId: @ViewBag.UserId
                        }
                    }

                    $.ajax({
                        url: '/Status/Add',
                        type: 'POST',
                        data: data,
                        success: function (res) {

                            $("#modalAdd").modal("hide");
                            DataTable.row.add(res).draw();
                        }
                    })
                })
            })



            DataTable = $("#tblStatus").DataTable({
                ajax: '/Status/GetAll',
                columns: [
                    { data: 'id', title: 'ID' },
                    { data: 'name', title: 'Durum Adı' },

                    //------------------------------------------------------------------------------------------------------------------------------------------------------
                    { data: 'name', title: 'Bağlı Görev Sayısı' },


                    {
                        data: 'id', title: 'İşlemler', render: function (data, type, row) {
                            return `<a onclick="deleteStatus(${data},this)" class="btn uil-trash-alt fs-6 btn-danger"></a> <a onclick="updateStatus(${data},this)" class="btn uil-pen fs-6 btn-success"></a>`;
                        }
                    }
                ]
            });
        });


        function deleteStatus(statusId, button) {

            if (confirm("Silmek istediğinize emin misiniz ?")) {
                let satir = $(button).parent().parent();
                $.ajax({
                    url: '/Status/Delete',
                    type: 'POST',
                    data: {
                        missionStatus: {
                            id: statusId
                        }
                    },
                    success: function () {
                        DataTable.row(satir).remove().draw();
                    }
                });
            }

        }

        function updateStatus(statusId, button) {

            $.ajax({
                url: '/Status/GetById',
                type: 'POST',
                data: { id: statusId },
                success: function (res) {

                    $("#modalAdd").modal("show");
                    $("#modalTitle").text("Kullanıcı Düzenle");
                    $("#txtStatusname").val(res.name);
                    $("#txtCustomerId").val(@ViewBag.UserId);

                    $("#btnSave").text("Düzenle").off().click(function () {

                        res.name = $("#txtStatusname").val();
                        res.customerId = @ViewBag.UserId;


                        $.ajax({
                            url: '/Status/Update',
                            type: 'POST',
                            data: {
                                missionStatus: {
                                    id: res.id,
                                    name: $("#txtStatusname").val(),
                                    customerId: $("#txtCustomerId").val(),
                                }
                            },
                            success: function (updatedStatus) {
                                $("#modalAdd").modal("hide");

                                let satir = $(button).parent().parent();
                                DataTable.row(satir).data(updatedStatus).draw();

                            }
                        });


                    });

                }

            });

        }


    </script>
}