<div class="card col-12 p-3">
    <div class="card-header text-center text-dark">
        <h4>Görev Yönetim Sayfası</h4>
    </div>
    <div id="content" class="d-flex flex-wrap p-2 col-12">
        
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/Status/GetAll',
                type: 'POST',
                success: function (res) {
                    let groupedData = res.data;

                    groupedData.forEach(status => {
                        $("#content").append(`
            <div class="card col-1 me-2" id="status-card-${status.id}">
                <div class="card-header text-dark text-center position-relative p-3 border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0 d-flex align-items-center">
                            ${status.name}
                            <span class="badge bg-secondary ms-2">${status.taskCount}</span>
                        </h5>
                        <a href="/Status/Update" class="btn btn-link position-absolute" style="top: 10px; right: 10px; font-size: 1.5rem; color: black; background: none; border: none; padding: 0; text-decoration: none;">
                            ⋮
                        </a>
                    </div>
                </div>
                <div class="card-body" id="tasks-${status.id}">
                </div>
                        <div class="card-footer btn btn-hover btn-secondary text-start text-dark" id="taskAdd-${status.id}"><i class="bx bx-plus"></i> Görev Ekle
                </div>
            </div>
        `);

                    });
                }

            });
            fillCarMision();
        });

        function fillCarMision() {
            $.ajax({
                url: "/Mission/GetAllCard",
                success: (data) => {
                    for (var item of data) {
                        let emails = "";
                        for (var user of item.assignees) {
                            emails += user.email + "<br/>";
                        }

                        $("#tasks-" + item.statusId).append(`
            <div class="col-sm-12">
                <div class="card card-clickable" style="cursor: pointer; transition: background-color 0.3s, box-shadow 0.3s;">
                    <div class="card-body">
                        <h5 class="card-title">#${item.id} ${item.title}</h5>
                        <p class="card-text">${item.description}</p>
                        <h6 class="card-text">${emails}</h6>
                    </div>
                </div>
            </div>
            <style>
                .card-clickable:hover {
                    background-color: #f8f9fa;
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                }
            </style>
        `);

                    }
                }
            });
        }
        

    </script>
}


