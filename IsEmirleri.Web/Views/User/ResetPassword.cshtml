@using IsEmirleri.DTO
@using IsEmirleri.Web.Models
@model ResetPasswordViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Şifre Yenileme</title>
    <!-- Bootstrap CSS -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header text-center">
                        <h2>Şifre Yenile</h2>
                    </div>
                    <div class="card-body">

                        <!-- Başarılı veya hatalı işlem için TempData ile mesajları göster -->
                        @if (TempData["error"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["error"]
                            </div>
                        }
                        @if (TempData["success"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["success"]
                            </div>
                        }

                        <!-- Şifre yenileme formu -->
                        <form asp-action="ResetPasswordConfirm" method="post">
                            <input type="hidden" name="UserGuid" value="@Model.UserGuid" />

                            <div class="form-group mb-3">
                                <label for="newPassword">Yeni Şifre</label>
                                <input type="password" id="newPassword" name="NewPassword" class="form-control" required />
                            </div>

                            <div class="form-group mb-3">
                                <label for="confirmPassword">Yeni Şifreyi Tekrar Girin</label>
                                <input type="password" id="confirmPassword" name="ConfirmPassword" class="form-control" required />
                            </div>
                            <div class="form-group mb-3">
                                <label for="password">Onay Kodu</label>
                                <input type="text" id="password" name="password" class="form-control" required />
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Şifreyi Yenile</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
</body>
</html>
